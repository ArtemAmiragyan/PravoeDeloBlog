{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",

        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./resources/js/*"
            ],
        },
        "types": [ "node" ],
        "typeRoots": [ "../node_modules/@types" ],
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules"],
    "include": [
        "resources/js/**/*.ts",
        "shims-vue.d.ts",
    ]
}
